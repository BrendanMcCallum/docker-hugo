#!/bin/sh

opts=""

case "$1" in

    "benchmark")
        exec hugo-official $@
        ;;

    "config")
        exec hugo-official $@
        ;;

    "convert")
        exec hugo-official $@
        ;;

    "env")
        exec hugo-official $@
        ;;

    "gen")
        exec hugo-official $@
        ;;

    "help")
        exec hugo-official $@
        ;;

    "import")
        exec hugo-official $@
        ;;

    "list")
        exec hugo-official $@
        ;;

    "new")
        exec hugo-official $@
        ;;

    "serve")
        opts="$opts --bind=${HUGO_BIND}"

        exec hugo-official $@ $opts
        ;;

    "server")
        opts="$opts --bind=${HUGO_BIND}"

        exec hugo-official $@ $opts
        ;;

    "undraft")
        exec hugo-official $@
        ;;

    "version")
        exec hugo-official $@
        ;;

    "deploy")
        exec hugo-official $@
        ;;

    "build")
        test "$HUGO_DESTINATION" = "public" || opts="$opts --destination=${HUGO_DESTINATION}"
        test "$(id -u)" = "0" || opts="$opts --noTimes"

        shift
        exec hugo-official $@ $opts
        ;;

    *)
        test "$HUGO_DESTINATION" = "public" || opts="$opts --destination=${HUGO_DESTINATION}"
        test "$(id -u)" = "0" || opts="$opts --noTimes"

        exec hugo-official $@ $opts
        ;;

esac
