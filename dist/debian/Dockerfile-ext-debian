FROM klakegg/hugo:base AS base

FROM klakegg/hugo:base-golang as golang



FROM debian:10.3-slim

ENV HUGO_BIND="0.0.0.0" \
    HUGO_DESTINATION="/target" \
    HUGO_ENV="DEV" \
    HUGO_CACHEDIR="/tmp" \
    NODE_PATH=".:/usr/lib/node_modules" \
    GOROOT="/usr/local/lib/go"

COPY --from=base /hugo-extended /debian /

COPY --from=golang / /

RUN apt update \
 && DEBIAN_FRONTEND=noninteractive apt install -y curl git gnupg bash-completion apt-transport-https lsb-release tzdata \
 && curl -sL https://deb.nodesource.com/setup_12.x | bash - \
 && apt install -y nodejs \
 && npm install -g autoprefixer postcss-cli yarn @babel/cli @babel/core \
 && apt remove -y curl gnupg apt-transport-https lsb-release \
 && apt autoremove -y \
 && rm -rf /var/lib/apt/lists/* \
 && rm -rf /tmp/npm

EXPOSE 1313

WORKDIR /src

ENTRYPOINT ["hugo"]
