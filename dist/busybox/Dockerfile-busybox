FROM klakegg/hugo:base AS base

FROM klakegg/hugo:base-certs as certs



FROM scratch as image

COPY --from=base /hugo-standard /busybox /
COPY --from=certs /files /



FROM busybox:1.31

ENV HUGO_BIND="0.0.0.0" \
    HUGO_DESTINATION="/target" \
    HUGO_ENV="DEV"

COPY --from=image / /

EXPOSE 1313

VOLUME /src /target
WORKDIR /src

ENTRYPOINT ["hugo"]
