FROM klakegg/hugo:base AS base



FROM ubuntu:18.04

ENV HUGO_BIND="0.0.0.0" \
    HUGO_DESTINATION="public" \
    HUGO_ENV="DEV" \
    HOME="/tmp"

COPY --from=base /hugo-standard /ubuntu /

RUN apt update \
 && DEBIAN_FRONTEND=noninteractive apt install -y bash-completion tzdata \
 && rm -rf /var/lib/apt/lists/*

EXPOSE 1313

WORKDIR /src

ENTRYPOINT ["hugo"]
